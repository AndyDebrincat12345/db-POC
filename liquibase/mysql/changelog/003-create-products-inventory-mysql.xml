<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="mysql-products-1" author="poc-team">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="products"/>
            </not>
        </preConditions>
        
        <!-- Products table for MySQL -->
        <createTable tableName="products">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="price" type="DECIMAL(10,2)"/>
            <column name="quantity_in_stock" type="INT" defaultValueNumeric="0"/>
            <column name="category" type="VARCHAR(100)"/>
            <column name="sku" type="VARCHAR(50)">
                <constraints unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- Inventory transactions table for MySQL -->
        <createTable tableName="inventory_transactions">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_type" type="ENUM('IN', 'OUT', 'ADJUSTMENT')">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- Foreign key constraints -->
        <addForeignKeyConstraint baseTableName="inventory_transactions" baseColumnNames="product_id"
                                constraintName="fk_inventory_product"
                                referencedTableName="products" referencedColumnNames="id"/>

        <!-- Indexes for MySQL -->
        <createIndex tableName="products" indexName="idx_products_sku">
            <column name="sku"/>
        </createIndex>
        
        <createIndex tableName="products" indexName="idx_products_category">
            <column name="category"/>
        </createIndex>
        
        <createIndex tableName="inventory_transactions" indexName="idx_transactions_product">
            <column name="product_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
